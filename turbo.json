{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "$CONTENTFUL_ENV",
        "$CONTENTFUL_SPACE_ID",
        "$CONTENTFUL_ACCESS_TOKEN",
        "$NEXT_PUBLIC_BASE_URL",
        "$NEXT_PUBLIC_ABOUT_URL",
        "$NEXT_PUBLIC_ARTICLES_URL",
        "$NEXT_PUBLIC_APPS_URL"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.local",
        ".env"
      ]
    }
  }
}